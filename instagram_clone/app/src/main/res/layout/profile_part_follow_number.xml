<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/posts_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="48"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/posts_name"
        android:layout_alignLeft="@+id/posts_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/posts_name"
        android:layout_height="wrap_content"
        android:layout_below="@+id/posts_number"
        android:layout_alignParentLeft="true"
        android:text="Posts"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/following"
        android:textAlignment="center"
        android:id="@+id/followers_number"
        android:text="290"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/following"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/following"
        android:layout_below="@+id/followers_number"
        android:text="Following"

        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followers_number"
        android:text="Followers"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="100"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>








</RelativeLayout>